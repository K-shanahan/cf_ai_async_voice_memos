{
  "name": "voice-memo-task-manager",
  "version": "0.1.0",
  "description": "Voice Memo Task Manager - A monorepo with backend (Cloudflare Workers) and frontend (React)",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:backend": "wrangler dev",
    "dev:frontend": "pnpm --filter @project/frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @project/backend build",
    "build:frontend": "pnpm --filter @project/frontend build",
    "build:shared": "pnpm --filter @project/shared build",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter @project/backend test",
    "test:ui": "pnpm --filter @project/backend test:ui",
    "test:coverage": "pnpm --filter @project/backend test:coverage",
    "deploy": "wrangler deploy",
    "deploy:pages": "pnpm build:frontend && gh pages deploy packages/frontend/dist --source gh-pages"
  },
  "pnpm": {
    "overrides": {},
    "packageExtensions": {}
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
